<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:id="@+id/fDialog_llTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="친구 추가"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fDialog_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가할 친구의 닉네임을 입력해주세요:)"
        android:layout_margin="20dp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/fDialog_llTitle" />

    <EditText
        android:id="@+id/fDialog_etByUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        android:background="@drawable/menu_border"
        android:layout_below="@id/fDialog_explain" />

    <TextView
        android:id="@+id/fDialog_tvAlertMsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ff0000"
        android:textSize="11sp"
        android:text="* 해당 닉네임의 유저는 존재하지 않습니다."
        android:layout_below="@id/fDialog_etByUser"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/fDialog_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="완료"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="20dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/fDialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
