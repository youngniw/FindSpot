<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="#ffffff"/>

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:top="8dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

    <!-- 둥근 모서리 설정 -->
    <corners
        android:radius="10dp"/>

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray"/>

</shape>